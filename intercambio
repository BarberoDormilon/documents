DIRECTORIO
      usuario@maquina:~$ pwd
      /home/usuario

CREAR CLAVES
      ssh-keygen -t rsa
      ssh-keygen -t dsa
      ssh-keygen -t ecdsa

MAQUINA
      home/user>mkdir .ssh
      home/user>chmod 700 .ssh
      home/user/.shh>vi authorized_keys
      home/user/.shh>chmod 600 authorized_keys                  "GUARDAMOS LA .pub DEL PC ORIGEN"
      home/user/.shh>sudo /etc/init.d/sshd reload               "RECARGAR MAQUINA"

